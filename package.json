{
	"name": "refined-saved-replies",
	"version": "0.5.0",
	"description": "Browser extension for GitHub's Saved Replies that adds replies from a repository's .github/replies.yml. ðŸ“¨",
	"homepage": "https://github.com/JoshuaKGoldberg/refined-saved-replies#readme",
	"bugs": {
		"url": "https://github.com/JoshuaKGoldberg/refined-saved-replies/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/JoshuaKGoldberg/refined-saved-replies.git"
	},
	"license": "MIT",
	"author": {
		"name": "JoshuaKGoldberg",
		"email": "npm@joshuakgoldberg.com"
	},
	"type": "module",
	"main": "lib/index.js",
	"files": [
		"LICENSE.md",
		"README.md",
		"lib/",
		"package.json"
	],
	"scripts": {
		"build": "web-ext build --overwrite-dest",
		"dev": "esbuild src/content-script.ts --bundle --minify --outfile=lib/content-script.js --sourcemap",
		"format": "prettier .",
		"lint": "eslint . --max-warnings 0",
		"lint:knip": "knip",
		"lint:md": "markdownlint \"**/*.md\" \".github/**/*.md\" --rules sentences-per-line",
		"lint:packages": "pnpm dedupe --check",
		"lint:spelling": "cspell \"**\" \".github/**/*\"",
		"lint:web-ext": "web-ext lint",
		"prepare": "husky",
		"test": "vitest",
		"tsc": "tsc"
	},
	"lint-staged": {
		"*": "prettier --ignore-unknown --write"
	},
	"dependencies": {
		"js-yaml": "^4.1.0",
		"mustache": "^4.2.0"
	},
	"devDependencies": {
		"@eslint-community/eslint-plugin-eslint-comments": "4.5.0",
		"@eslint/js": "9.35.0",
		"@types/eslint-plugin-markdown": "2.0.2",
		"@types/js-yaml": "4.0.9",
		"@types/mustache": "4.2.5",
		"@types/node": "22.18.0",
		"@vitest/coverage-v8": "3.2.0",
		"@vitest/eslint-plugin": "1.3.3",
		"console-fail-test": "0.5.0",
		"create-typescript-app": "2.42.0",
		"cspell": "9.2.0",
		"esbuild": "0.25.2",
		"eslint": "9.35.0",
		"eslint-plugin-jsdoc": "54.5.0",
		"eslint-plugin-jsonc": "2.20.0",
		"eslint-plugin-markdown": "5.1.0",
		"eslint-plugin-n": "17.16.2",
		"eslint-plugin-package-json": "0.54.0",
		"eslint-plugin-perfectionist": "4.15.0",
		"eslint-plugin-regexp": "2.10.0",
		"eslint-plugin-yml": "1.18.0",
		"happy-dom": "18.0.0",
		"husky": "9.1.7",
		"knip": "5.63.0",
		"lint-staged": "16.1.0",
		"markdownlint": "0.38.0",
		"markdownlint-cli": "0.45.0",
		"prettier": "3.6.0",
		"prettier-plugin-curly": "0.3.1",
		"prettier-plugin-packagejson": "2.5.10",
		"prettier-plugin-sh": "0.18.0",
		"sentences-per-line": "0.3.0",
		"typescript": "5.9.2",
		"typescript-eslint": "8.41.0",
		"vitest": "3.2.0",
		"web-ext": "8.9.0"
	},
	"packageManager": "pnpm@10.15.0",
	"engines": {
		"node": ">=18"
	},
	"publishConfig": {
		"provenance": true
	}
}
